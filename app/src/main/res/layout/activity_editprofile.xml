<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waditra.app.EditProfile"
    android:background="#f4f4f4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/fb"
            android:backgroundTint="@color/fb">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageButton4"
                android:background="@color/fb"
                android:textColor="#fff"
                android:onClick="onBack3"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:backgroundTint="@color/fb" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="DATA DIRI"
                    android:id="@+id/textView96"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" >

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageButton6"
                    android:background="@drawable/ic_settings_white_24dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#6c6c6c"
                    android:tint="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT PROFILE"
                    android:id="@+id/textView7"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="5dp"
                    android:typeface="sans"
                    android:textColor="#6c6c6c"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView3"
            android:layout_marginBottom="50dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView7"
                                android:background="@drawable/ic_account_box_white_18dp"
                                android:backgroundTint="#000"
                                android:layout_gravity="center_vertical"
                                android:tint="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/ubahNama"
                                android:background="#fff"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:lines="1"
                                android:hint="NAMA"
                                android:typeface="sans"
                                android:selectAllOnFocus="true"
                                android:textSize="13dp"
                                android:layout_marginRight="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp" >

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:id="@+id/button9"
                                android:singleLine="true"
                                android:background="#e9e9e9"
                                android:drawableLeft="@drawable/ic_edit_white_24dp"
                                android:drawableTint="#000"
                                android:paddingLeft="10dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#e9e9e9" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView"
                                android:background="@drawable/ic_room_white_24dp"
                                android:backgroundTint="#000" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:id="@+id/ubahAlamat"
                                android:background="#fff"
                                android:padding="5dp"
                                android:singleLine="false"
                                android:hint="ALAMAT"
                                android:typeface="sans"
                                android:selectAllOnFocus="true"
                                android:textSize="13dp"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="top"
                                android:gravity="top" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp" >

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:id="@+id/button7"
                                android:singleLine="true"
                                android:background="#e9e9e9"
                                android:drawableLeft="@drawable/ic_edit_white_24dp"
                                android:drawableTint="#000"
                                android:paddingLeft="10dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView6"
                                android:background="@drawable/ic_phone_android_white_24dp"
                                android:backgroundTint="#000"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/ubahTelpon"
                                android:background="#fff"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:lines="1"
                                android:hint="NO.TELPON"
                                android:typeface="sans"
                                android:selectAllOnFocus="true"
                                android:textSize="13dp"
                                android:layout_marginRight="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp" >

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:id="@+id/button8"
                                android:singleLine="true"
                                android:background="#e9e9e9"
                                android:drawableLeft="@drawable/ic_edit_white_24dp"
                                android:drawableTint="#000"
                                android:paddingLeft="10dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#e9e9e9" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView10"
                                android:background="@drawable/ic_contact_mail_white_24dp"
                                android:backgroundTint="#000"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/ubahEmail"
                                android:background="#fff"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:lines="1"
                                android:hint="EMAIL"
                                android:typeface="sans"
                                android:selectAllOnFocus="true"
                                android:textSize="13dp"
                                android:layout_marginRight="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp" >

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:id="@+id/button12"
                                android:singleLine="true"
                                android:background="#e9e9e9"
                                android:drawableLeft="@drawable/ic_edit_white_24dp"
                                android:drawableTint="#000"
                                android:paddingLeft="10dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#e9e9e9" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView8"
                                android:background="@drawable/ic_public_white_18dp"
                                android:backgroundTint="#000"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/ubahFB"
                                android:background="#fff"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:lines="1"
                                android:hint="FACEBOOK USER"
                                android:typeface="sans"
                                android:selectAllOnFocus="true"
                                android:textSize="13dp"
                                android:layout_marginRight="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp" >

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:id="@+id/button10"
                                android:singleLine="true"
                                android:background="#e9e9e9"
                                android:drawableLeft="@drawable/ic_edit_white_24dp"
                                android:drawableTint="#000"
                                android:paddingLeft="10dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#e9e9e9" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="-20dp"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/imageView9"
                                android:background="@drawable/ic_public_white_18dp"
                                android:backgroundTint="#000"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:id="@+id/ubahTW"
                                android:background="#fff"
                                android:padding="5dp"
                                android:singleLine="true"
                                android:lines="1"
                                android:hint="TWITTER USER"
                                android:typeface="sans"
                                android:selectAllOnFocus="true"
                                android:textSize="13dp"
                                android:layout_marginRight="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-50dp" >

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:id="@+id/button11"
                                android:singleLine="true"
                                android:background="#e9e9e9"
                                android:drawableLeft="@drawable/ic_edit_white_24dp"
                                android:drawableTint="#000"
                                android:paddingLeft="10dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#e9e9e9" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="simpan perubahan"
            android:id="@+id/button13"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:background="#F15A23"
            android:nestedScrollingEnabled="false"
            android:onClick="simpan" />
    </LinearLayout>
</RelativeLayout>
