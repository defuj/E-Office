<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.waditra.app.Profil"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingTop="20dp"
            android:background="@color/fb">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:id="@+id/onBack2"
                android:textColor="#fff"
                android:onClick="onBack2"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingBottom="10dp"
                android:gravity="center_vertical|right">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginRight="20dp">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/imageButton3"
                        android:background="@drawable/ic_settings_white_24dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDIT PROFILE"
                        android:id="@+id/textView4"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="5dp"
                        android:typeface="sans"
                        android:textColor="#fff"
                        android:onClick="editProfile"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/fb">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:text="Android Studio"
                            android:id="@+id/txtNamaProfil"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginTop="-20dp"
                            android:typeface="sans"
                            android:elegantTextHeight="false"
                            android:textAllCaps="true"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/txtEmailProfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="android.studio@android.com"
                            android:textStyle="bold"
                            android:typeface="sans"
                            android:elegantTextHeight="false"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="30dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="30dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <Button
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:id="@+id/btnTwitter"
                                android:backgroundTint="#4099ff"
                                android:singleLine="true"
                                android:background="@drawable/design_fab_background"
                                android:layout_marginRight="20dp"
                                android:text="t"
                                android:textColor="#fff"
                                android:typeface="sans"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:onClick="goTwitter" />

                            <Button
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:id="@+id/btnFacebook"
                                android:backgroundTint="#3b5998"
                                android:singleLine="true"
                                android:background="@drawable/design_fab_background"
                                android:layout_marginRight="20dp"
                                android:text="f"
                                android:textColor="#fff"
                                android:typeface="sans"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:onClick="goFacebook" />

                            <Button
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:id="@+id/btnPlus"
                                android:backgroundTint="#d34836"
                                android:singleLine="true"
                                android:background="@drawable/design_fab_background"
                                android:layout_marginRight="20dp"
                                android:text="G+"
                                android:textColor="#fff"
                                android:typeface="sans"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp"
                                android:onClick="goPlus" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#fff"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-180dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:visibility="gone">

                        <Button
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:id="@+id/status"
                            android:background="#007aff"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:singleLine="true"
                            android:textSize="10dp"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_marginLeft="20dp"
                            android:typeface="sans"
                            android:text="Online" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:id="@+id/fotoProfile"
                            android:background="@drawable/design_fab_background"
                            android:onClick="gantiPhoto"
                            app:roundAsCircle="true"
                            android:layout_gravity="center"
                            app:placeholderImage="@drawable/client"
                            android:layout_margin="10dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:backgroundTint="#fff"
                    android:background="@drawable/rounded_abu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:gravity="top">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/imageView4"
                                    android:background="@mipmap/ic_alamat"
                                    android:backgroundTint="#000"
                                    android:tint="#000" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:focusableInTouchMode="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtAlamat"
                                    android:textColor="#000"
                                    android:singleLine="false"
                                    android:hint="ALAMAT"
                                    android:textColorHint="#000"
                                    android:typeface="sans"
                                    android:selectAllOnFocus="true"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:textSize="13dp"
                                    android:paddingLeft="5dp"
                                    android:layout_marginRight="40dp"
                                    android:autoText="true" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="-20dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:layout_gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/imageView5"
                                    android:background="@mipmap/ic_tlp"
                                    android:backgroundTint="#000"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtTelpon"
                                    android:textColor="#000"
                                    android:singleLine="true"
                                    android:lines="1"
                                    android:hint="NO.TELPON"
                                    android:textColorHint="#000"
                                    android:typeface="sans"
                                    android:selectAllOnFocus="true"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="true"
                                    android:textSize="13dp"
                                    android:paddingLeft="5dp"
                                    android:layout_marginRight="20dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingLeft="5dp"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="-20dp" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:layout_gravity="center_vertical" >

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:id="@+id/imageView11"
                                    android:background="@mipmap/ic_mail"
                                    android:backgroundTint="#000"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txtEmail"
                                    android:textColor="#000"
                                    android:singleLine="true"
                                    android:lines="1"
                                    android:hint="EMAIL"
                                    android:textColorHint="#000"
                                    android:typeface="sans"
                                    android:selectAllOnFocus="true"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="true"
                                    android:textSize="13dp"
                                    android:paddingLeft="5dp"
                                    android:layout_marginRight="20dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_abu"
                    android:backgroundTint="#fff"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Pemberitahuan Terkini :"
                        android:id="@+id/textView97"
                        android:layout_marginBottom="3dp"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="0.50"
                            android:layout_margin="2dp"
                            android:background="@color/fb"
                            android:backgroundTint="#007aff"
                            android:visibility="gone" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="0.50"
                            android:layout_margin="2dp"
                            android:background="@color/fb"
                            android:backgroundTint="#4cd964"
                            android:visibility="gone" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_weight="0.50"
                            android:layout_margin="2dp"
                            android:background="@color/fb"
                            android:backgroundTint="#ff3b30"
                            android:visibility="gone"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
